:host {
  display: block;
  background-color: #0000ff24;
  height: 100%;
}

svg {
  height: 100%;
  width: 100%;
  margin: auto;
  fill: white;
  fill-rule: nonzero;
  stroke: white;
  stroke-width: 0.25;
  stroke-miterlimit: 1;
}

.clickable {
  fill: rgba(128, 0, 128, 0.24);
  cursor: pointer;
  transition: .4s;
}

.clickable:hover {
  fill: purple;
}

:focus {
  outline: none
}
